<!-- widget grid -->
<section id="slogan-index" class="">
	<!-- row -->
	<div class="row">
		<!-- NEW WIDGET START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget jarviswidget-color-darken" id="slogan-table-widget" data-widget-editbutton="false" style="display: none;">
				<!-- widget options:
				usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

				data-widget-colorbutton="false"
				data-widget-editbutton="false"
				data-widget-togglebutton="false"
				data-widget-deletebutton="false"
				data-widget-fullscreenbutton="false"
				data-widget-custombutton="false"
				data-widget-collapsed="true"
				data-widget-sortable="false"

				-->
				<header>
					<span class="widget-icon"> <i class="fa fa-table"></i> </span>
					<h2>Slogan管理</h2>
				</header>

				<!-- widget div-->
				<div>
					<!-- widget edit box -->
					<div class="jarviswidget-editbox">
						<!-- This area used as dropdown edit box -->

					</div>
					<!-- end widget edit box -->

					<!-- widget content -->
					<div class="widget-body no-padding">
						<!-- end messageBox div -->
						<table id="slogan-table" class="table table-striped table-bordered table-hover" width="100%">
							<thead>
							<tr>
								<th class="" data-hide="phone">#</th>
								<th class="" data-class="expand"><i class="fa fa-fw fa-slogan text-muted hidden-md hidden-sm hidden-xs"></i>Source</th>
								<th class="" data-hide="phone,tablet">content</th>
								<th class=""></th>
								<th class="no-sort"></th>
							</tr>
							</thead>
							<tbody>
							<tr v-for="slogan in data.items" v-on:click="selection($index)" v-on:dblclick="dblclick($index)">
								<td>{{ slogan.id }}</td>
								<td><a href="/admin/#/admin/slogan/show/{{slogan.id}}">{{ slogan.content }}</a></td>
								<td>{{ slogan.source }}</td>
								<td>{{ slogan.lastLogin }}</td>
								<td align="center" style="cursor: pointer;">
									<div class="row">
										<a class="btn btn-default btn-xs" role="button" v-on:click="show(slogan.id)">
											<i class="fa-fw fa fa-eye text-muted" />
										</a>
										<a class="btn btn-default btn-xs" role="button" v-on:click="edit(slogan.id)">
											<i class="fa-fw fa fa-pencil-square-o text-muted"/>
										</a>
									</div>
								</td>
							</tr>
							</tbody>
						</table>

					</div>
					<!-- end widget content -->

				</div>
				<!-- end widget div -->

			</div>

	</div>
	<!-- end widget -->

	</article>
	<!-- WIDGET END -->

	</div>

	<!-- end row -->

	<!-- end row -->

</section>
<!-- end widget grid -->
