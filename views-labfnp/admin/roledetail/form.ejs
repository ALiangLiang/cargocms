    },
    RoleId:{
      required: true,
    },
    MenuItemId:{
      required: true,
    },
  };

  var formMessages = {
    name:{
      required: "請給予 權限",
    },
    api:{
      required: "請給予 api",
    },
    RoleId:{
      required: "請給予 角色",
    },
    MenuItemId:{
      required: "請給予 選單名稱",
    },
  };
</script>
