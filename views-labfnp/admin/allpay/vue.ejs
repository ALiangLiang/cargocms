appMain.DataTableInitComplete = function() {
  var api = this.api();
  this.yadcf([
    {        
      column_number: 3,
      filter_type: "range_date",
      filter_container_id: "external_filter_container",
      date_format: 'yy/mm/dd',
    },
  ]);
  var slesct = '<span>訂單狀態：</span>'+
  '<select class="form-control input-sm" id="productionStatus" style="margin-right: 5px;">'+
    '<option value=""></option>' +
    '<option value="NEW">NEW</option>' +
    '<option value="SUBMITTED">下訂單</option>' +
    '<option value="PAID">已付款</option>' +
    '<option value="PROCESSING">製作中</option>' +
    '<option value="CANCELLED">取消</option>' +
    '<option value="SHIPPED">已寄出</option>' +
    '<option value="DELIVERED">已交付</option>' +
    '<option value="COMPLETED">完成</option>' +
  '</select>';
  $(slesct).prependTo('.DTTT_container');
  $('#productionStatus').on('change', function(){
    api.columns().search().draw();
  });

  $("[name=editOrderButton]").on("click", function(e) {
      var that = this;
      $.SmartMessageBox({
        title : "更新物流資料",
        content :
        "<select id='shipping' class='form-control'>" +
          "<option value='HCT' selected>新竹貨運</option>" +
        "</select> <br/>" +
        "請輸入物流編號 :<br/>" +
        "<input id='trackingNumber' type='text' class='form-control'/>" +
        "<br/>",
        buttons : "[更新][取消]"
      }, function(ButtonPress) {
           if(ButtonPress === "取消"){
             return 0;
           }

           var trackingNumber = $("#trackingNumber").val();
           var shipping = $("#shipping").val();
           var recipeId = $(that).attr("data-recipeOrder-id");

           if(!shipping || !trackingNumber){
             messageApp.show({
               desc: '更新資料失敗！ 請填寫完整資料 ',
               type: 'error'
             });
             return 0;
           }

           var ajaxSuccess = function (result) {
             location.href = '/admin/#/admin/' + modelName;
             messageApp.show({
             desc: '更新資料成功！',
             type: 'success'
             });
           }; // end ajaxSuccess

          var ajaxError = function (result) {
            messageApp.show({
              desc: '更新資料失敗！errorMessage: ' + result.responseJSON.message,
              type: 'error'
            });
          };

          $.ajax({
            url: '/api/' + prefix + 'shipping' + '/' + recipeId,
            type: 'PUT',
            dataType: 'json',
            data: {trackingNumber, shipping},
            xhrFields: {
            withCredentials: true,
            },
            success: ajaxSuccess,
            error: ajaxError,
            });
         }
      );
      e.preventDefault();
  });

}
appMain.customSearch = function() {
  var searchProductionStatus = $('#productionStatus').val() || "";
  if (searchProductionStatus !== '') {
    appModel.pagingQuery.columns.push({
      data: '',
      searchable: true,
      findInclude: true,
      search: {
        model: 'RecipeOrder',
        where: {
          productionStatus: $('#productionStatus').val(),
        }
      }
    })
  }
}
