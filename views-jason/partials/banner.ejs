<% LayoutUtils.addScripts('/assets/simple/js/plugin/swiper/swiper.jquery.min.js'); %>
<% LayoutUtils.addStylesheets('/assets/simple/js/plugin/swiper/swiper.min.css'); %>
<% LayoutUtils.addStylesheets('/assets/jason/css/banner.css'); %>
<div class="swiper">
  <div class="swiper-container">
      <div class="swiper-wrapper">
        <% for(var i = 1;i<=5;i++) {%>
          <div class="swiper-slide" style="background-image:url(/uploads/banner/<%= i %>)">
            <div class="bg-text">
              <p>
                <span>EX</span>CELLENT
              </p>
              <p>
                <span>HIGH</span> QUALITY
              </p>
              <p>
                <span>SE</span>RVICE
              </p>
            </div>
            <div class="slogan">
              <h3>
                諮詢<span>/</span>設計<span>/</span>安裝<span>/</span>保養<span>/</span>維修
                <p>專業團隊 責任施工 品質打造 服務熱誠</p>
              </h3>
            </div>
          </div>
        <% } %>
      </div>
  </div>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.8&appId=949641951849207";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <div class="fb-like" data-href="https://www.facebook.com/404755719875679/" data-layout="button_count" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>

  <!-- 如果需要分页器 -->
  <div class="swiper-pagination"></div>
</div>

<% LayoutUtils.addScriptBlock(`
  $(document).ready(function () {
    var banner = new Swiper ('.swiper-container', {
      loop: true,
      autoplay: 3500,//可选选项，自动滑动
      spaceBetween: 30,
      effect: 'fade',
      speed: 800,

      // 如果需要分页器
      pagination: '.swiper-pagination',
    })
  })
`); %>
