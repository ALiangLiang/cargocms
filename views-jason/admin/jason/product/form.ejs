<fieldset>

  <h3 class="text-center">產品介紹<h3>
  <hr style="border: 1px solid #a9a9a9;"/>
  <br/>
  <div class="row">
    <section class="col col-lg-6 col-xs-6 col-xs-6">
      <label class="label">名稱</label>
      <label class="input state-disabled">
        <input type="text" name="title" placeholder="產品名稱" v-model="data.item.title" v-on:change="titleOnChange" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入產品名稱</b></label>
    </section>

    <section class="col col-lg-6 col-xs-6 col-xs-6">
      <label class="label">模組名稱</label>
      <label class="input state-disabled">
        <input type="text" name="modelName" placeholder="模組名稱" v-model="data.item.modelName" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入模組名稱</b></label>
    </section>
  </div>

  <div class="row">
    <section class="col col-lg-6 col-xs-6 col-xs-6">
      <label class="label">規格</label>
      <label class="input state-disabled">
        <input type="text" name="specification" placeholder="詳細規格" v-model="data.item.specification" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入規格</b></label>
    </section>

    <section class="col col-lg-6 col-xs-6 col-xs-6">
      <label class="label">說明</label>
      <label class="input state-disabled">
        <input type="text" name="introduction" placeholder="詳細說明" v-model="data.item.introduction" disabled>
        <b class="tooltip tooltip-bottom-right">請輸入說明</b></label>
    </section>
  </div>

  <div class="row">
    <section class="col col-lg-6 col-xs-6 col-xs-6">
      <label class="label">類別</label>
      <label class="select">
        <select class="state-disabled" name="groupId" v-model="data.item.groupId" disabled>
          <option value="0"></option>
          <option v-for="groupPart in data.option.group" v-bind:value="groupPart.id">
            {{ groupPart.title }}
          </option>
        </select><i></i> </label>
    </section>
  </div>

  <br/>
  <h3 class="text-center">產品內容<h3>
  <hr style="border: 1px solid #a9a9a9;"/>
  <br/>

  <div class="row">
