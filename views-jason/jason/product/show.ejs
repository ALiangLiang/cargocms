<% LayoutUtils.addMeta({ property:"og:title", content: product.title }); %>
<% LayoutUtils.addMeta({ property:"og:description", content:"捷陞專業自動門 - 產品介紹" }); %>

<% LayoutUtils.addStylesheets('/assets/jason/page/index/index.css'); %>
