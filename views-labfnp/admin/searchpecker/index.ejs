
<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
  <thead>
    <tr>
      <th data-hide=""
      data-class="" class="no-sort">
        關鍵字
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        爬蟲程序
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        回報 Html
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        回報截圖
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        頁面位置
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        上個頁面
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        頁面數量警示
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        目標網頁
      </th>

      <th data-hide=""
      data-class="" class="no-sort">
        搜尋引擎
      </th>

      <th width="80" data-hide="phone,tablet"></th>
    </tr>
  </thead>
  <!-- client only -->
  <tbody>
    <tr v-for="item in data.items">

        <td>{{ item.keywords}}</td>

        <td>{{ item.crawlerAgent}}</td>

        <td>{{ item.reportHtml}}</td>

        <td>{{ item.reportImage}}</td>

        <td>{{ item.pageNo}}</td>

        <td>{{ item.pageNoPrev}}</td>

        <td>{{ item.pageNoWarn}}</td>

        <td>{{ item.targetUrl}}</td>

        <td>{{ item.searchEngine}}</td>

      <td align="center" style="cursor: pointer;">
        <div class="row">
          <a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
            <i class="fa-fw fa fa-eye text-muted" />
          </a>
          <a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
            <i class="fa-fw fa fa-pencil-square-o text-muted"/>
          </a>
        </div>
      </td>
    </tr>
  </tbody>
 </table>


<script type="text/javascript">
  var pagefunction = function() {

    // server only
    var columns = [
      { "data": "keywords" },

      { "data": "crawlerAgent" },

