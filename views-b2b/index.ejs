<% LayoutUtils.addScriptBlock(`
jQuery(document).ready(function() {
  // App.init();
	// 	OwlCarousel.initOwlCarousel();
	$('.product input[type="number"]').bootstrapNumber();

  $('.logout-link').click(function(){
    swal({
      title: '確認',
      text: '您確定要登出了嗎？',
      type: 'warning',
      showCancelButton: true,
      confirmButtonColor: "#e6caa8",
      confirmButtonText: "登出",
      cancelButtonText: "取消",
      closeOnConfirm: true,
      closeOnCancel: true,
    },function(isConform){
      if(isConform){
        open('/logout', '_self');
      }else{
        swal.close();
      }
    });
  });
});
`); %>
