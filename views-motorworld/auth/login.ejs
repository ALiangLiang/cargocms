<style type="text/css">
  body {
    background-color: #fff;
  }
</style>
<div class="moto-content container moto-login">
  <div class="row">
    <!--<div class="col-md-3">
      <div class="moto-ad">

      </div>
    </div> -->
    <div class="col-md-offset-2 col-md-8">
      <a class="btn btn-primary btn-lg btn-block facebook-btn" href="/auth/facebook">
        <i class="fa fa-facebook-official" aria-hidden="true"></i> 使用 FB 臉書帳號登入
      </a>
      <div class="or-divider"></div>
      <form class="login-form" method="post" action="/auth/local?url=<%= data.url %>">
        <div class="form-group col-xs-12" style="margin-bottom: 30px;">
          <input id="identifier" name="identifier" class="form-control" placeholder="* 帳號">
        </div>
        <div class="form-group col-xs-12" style="margin-bottom: 56px;">
          <input id="password" name="password" type="password" class="form-control" placeholder="* 密碼">
        </div>
        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-primary btn-lg btn-block">立即登入</button>
        </div>

      </form>

    </div>
  </div>
</div>

<% LayoutUtils.addScriptBlock(`
  $(document).ready(function(){

    $(".login-form").validate({
      rules: {
        identifier: {
          required: true
        },
        password: {
          required: true
        },

      },
      messages: {
        identifier: {
          required: "${__('login.invalid.username.empty')}"
        },
        password:{
          required: "${__('login.invalid.password.empty')}"
        },
      },
      highlight: function(element) {
          $(element).closest('.form-group').addClass('has-error');
      },
      unhighlight: function(element) {
          $(element).closest('.form-group').removeClass('has-error');
      },
      errorElement: 'span',
      errorClass: 'help-block',
      errorPlacement: function(error, element) {
          if(element.parent('.input-group').length) {
              error.insertAfter(element.parent());
          } else {
              error.insertAfter(element);
          }
      }
    });



  });
`); %>
