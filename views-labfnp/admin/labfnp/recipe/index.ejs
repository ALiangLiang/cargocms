<% LayoutUtils.addStylesheets('/assets/admin/css/smartadmin-default-index.css'); %>

<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
	<thead>
		<tr>
			<th class="no-search" data-hide="phone"><i class="fa fa-fw text-muted fa-hashtag hidden-sm hidden-xs"/> ID</th>
      <th data-class="expand"><i class="fa fa-fw fa-sticky-note text-muted hidden-xs" /> 香水名稱</th>
      <th data-hide=""><i class="fa fa-fw fa-user text-muted hidden-xs" /> 創作人</th>
      <th data-hide="phone,tablet" style="">建立日期</th>
      <th class="no-search" data-hide="">公開狀態</th>
      <th class="no-search" data-hide="">製作狀態</th>
      <th class="no-search" data-hide="always" style="width: 30%;">
				<i class="fa fa-fw fa-comment text-muted hidden-xs" /> 香水描述
			</th>
      <th class="no-search" data-hide="always" style="width: 30%;">
				<i class="fa fa-fw fa-comment text-muted hidden-xs" /> 額外資訊
			</th>

			<template v-for="n in 6">
				<th class="no-sort" data-hide="always" style="">
					<i class="fa-fw fa fa-pie-chart fa-comment text-muted" /> 香味分子{{n+1}}
				</th>
			</template>
			<th class="no-sort no-search" data-hide="phone,tablet"></th>
		</tr>
	</thead>
	<!-- client only -->
	<tbody>
		<tr v-for="item in data.items">
      <td>{{ item.id }}</td>
      <td><a href="/admin/#/admin/labfnp/recipe/show/{{item.id}}">{{ item.perfumeName }}</a></td>
      <td>{{ item.authorName }}</td>
      <td>{{ item.createdAt }}</td>
      <td>{{ item.visibilityDesc }}</td>
      <td>{{ item.productionStatusDesc }}</td>
      <td>{{ item.description }}</td>
      <td>{{ item.message }}</td>

      <template v-for="n in 6">
        <td> {{ item.formula[n].scent }} - {{ item.formula[n].drops }}滴 - ({{ Math.round((item.formula[n].drops / item.formulaTotalDrops * 100)*10000)/10000 + '%'}})</td>
      </template>

			<td align="center" style="cursor: pointer;">
				<div class="row">
					<a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
						<i class="fa-fw fa fa-eye text-muted" />
					</a>
					<a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
						<i class="fa-fw fa fa-pencil-square-o text-muted"/>
					</a>
				</div>
			</td>
		</tr>
	</tbody>
 </table>


<script type="text/javascript">
	var pagefunction = function() {

		// server only
		var columns = [
			{ "data": "id" },
			{ "data": "perfumeName" },
			{ "data": "authorName" },
			{ "data": "createdAt" },
      { "data": "visibilityDesc" },
      { "data": "productionStatusDesc"},
      { "data": "description" },
      { "data": "message" },
			{ "data": null }
		]

		// server only
		var columnDefs = [
      {
        "targets": 'no-sort',
        "orderable": false,
      },
      {
        "targets": "no-search",
        "searchable": false
      },
			{
				"targets"  : 8,
				"orderable": false,
				"searchable": false,
				"render": function ( data, type, row ) {
					var colBody =
					'<div class="row-action-buttons hidden-xs hidden-sm">'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.show('+row.id+')">'+
							'<i class="fa-fw fa fa-eye text-muted" />'+
						'</a>'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.edit('+row.id+')">'+
							'<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
						'</a>'+
					'</div>';
					return colBody;
				}
			},
		]
		var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;

		<%- include vue.ejs %>
		appMain.$mount("#main-index");
		appMain.loadItems(appMain.renderTable);
	};
</script>
