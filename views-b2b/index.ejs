<div class="">
  <% include lib/login.inc.ejs %>
	<div class="row b2b-content b2b-content-header">
    <div class="collapse navbar-collapse mega-menu navbar-responsive-collapse">
      <div class="container">
        <ul class="nav navbar-nav">
          <% if (!req.session.authenticated) { %>
            <% var loginBackUrl = req.url;%>
            <% if(loginBackUrl === '/register' || loginBackUrl === '/') { %>
            <%   loginBackUrl = '' %>
            <% } else { %>
            <%   loginBackUrl = '?url=' + loginBackUrl %>
            <% } %>
            <li class="<%= (req.path=='/login')?'active':'' %>"><a id="login" class="login-btn">登入</a></li>
          <% } else { %>
            <li><a id="logout-link" class="logout-link" href="javascript: void(0)" >登出</a></li>
            <li class="topbar-devider"></li>
            <li class="<%= (req.path=='/me')?'active':'' %>" >
              <a href="javascript: void(0)">
                <%= req.session.passport.user.displayName %>
              </a>
            </li>
          <% } %>
        </ul>
  		</div>
    </div>
		<div class="col-md-12">
			<h1 style="
		    height: 161px;
		    background: #efefef;
		    margin: 35px 10px 37px;
		    text-align: center;
		    line-height: 161px;
		    font-size: 7em;
		    color: #d6d6d6;
		    text-transform: uppercase;">b2b</h1>
		</div>
