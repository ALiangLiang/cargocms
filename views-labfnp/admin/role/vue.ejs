appMain.editDisabled = function(){
  $('label.fn-edit-disabled > input').attr('disabled', true);
  $('label.fn-edit-disabled').addClass('state-disabled');
};

appMain.editOnlyMethod = function(){
  $('a.btn-edit-only').attr('disabled', true);
  $('a.btn-edit-only').attr('pointer-events', 'none');
  $('a.btn-edit-only').hide();
};

appMain.createHide = function () {
  $('.fn-create-hide').hide();
};

appMain.removeDelete = function () {
  var editUser = $('input[name="authority"]').val();
  if(editUser === 'admin') {
    $('.btn-danger').attr('disabled', true);
    $('.btn-danger').hide();
  }
}
