<% LayoutUtils.addStylesheets('/assets/jason/page/index/index.css'); %>
<% LayoutUtils.addStylesheets('/assets/jason/page/product/product.css'); %>

<div class="container body">

<% include ../../partials/banner.ejs %>

  <div class="row">
    <div class="col-md-9 col-md-push-3 content">

      <article>
        <header class="article-title">
          <h1 id="intro">產品介紹</h2>
        </header>

        <% for(let item of products) { %>
          <div class="product row">
            <div class="col-xs-3 product-img-wrapper">
              <img class="img-thumbnail" src="http://www.autodoor.twmail.net/webadmin/goods/file/HC-168-1.jpg" alt="產品圖" />
            </div>
            <div class="col-xs-9 product-content">
              <h1><%= item.Product.title %></h1>
              <small><%= item.Product.specification %></small>
              <p>
                <%= item.Product.introduction %>
              </p>
            </div>
          </div>
        <% } %>

      </article>
    </div>

    <div class="col-md-3 col-md-pull-9" style="padding-right:2.5em;">
      <div class="side-menu" id="sticker">
        <h3>
          產品介紹
          <small>About Us</small>
        </h3>
        <div class="list-group">
          <a href="/product" class="list-group-item">全部產品</a>
          <% for(let group of productGroups) { %>
            <a href="/product?type=<%= group.id %>" class="list-group-item"><%= group.title %></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

</div>

<% LayoutUtils.addScriptBlock(`
jQuery(document).ready(function() {

});
`); %>
