
<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
	<thead>
		<tr>
			<th class="" data-hide="phone"><i class="fa fa-fw text-muted fa-hashtag hidden-sm hidden-xs"/> ID</th>
			<th class="" data-class="expand"><i class="fa fa-fw text-muted hidden-sm hidden-xs"/> TradeNo </th>
      <th class="">MerchantTradeNo</th>
      <th class="">RtnCode</th>
      <th class="">RtnMsg</th>
      <th class="">PaymentDate</th>
      <th class="">PaymentType</th>
      <th class="">TradeAmt</th>
      <th class="">vAccount</th>
			<th class="">RecipeOrderId</th>
      <th class="" data-hide="phone,tablet"><i class="fa fa-fw fa-clock-o text-muted hidden-sm hidden-xs"/> createdAt</th>
			<th class="" data-hide="phone,tablet"><i class="fa fa-fw fa-clock-o text-muted hidden-sm hidden-xs"/> updatedAt</th>
			<th class="" data-hide="phone,tablet"></th>
		</tr>
	</thead>
	<!-- client only -->
	<tbody>
		<tr v-for="item in data.items">
      <td>{{ item.id }}</td>
			<td><a href="/admin/#/admin/{{modelName}}/show/{{item.id}}">{{ item.TradeNo }}</a></td>
			<td>{{ item.MerchantTradeNo }}</td>
			<td>{{ item.RtnCode }}</td>
			<td>{{ item.RtnMsg }}</td>
      <td>{{ item.PaymentDate }} </td>
      <td>{{ item.PaymentType }} </td>
      <td>{{ item.TradeAmt }} </td>
      <td>{{ item.vAccount }} </td>
      <td>{{ item.RecipeOrderId }} </td>
      <td>{{ item.createdAt }} </td>
			<td>{{ item.updatedAt }} </td>
			<td align="center" style="cursor: pointer;">
				<div class="row">
					<a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
						<i class="fa-fw fa fa-eye text-muted" />
					</a>
					<a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
						<i class="fa-fw fa fa-pencil-square-o text-muted"/>
					</a>
				</div>
			</td>
		</tr>
	</tbody>
 </table>


<script type="text/javascript">
	var pagefunction = function() {

		// server only
		var columns = [
			{ "data": "id" },
			{ "data": "TradeNo" },
			{ "data": "MerchantTradeNo" },
			{ "data": "RtnCode" },
      { "data": "RtnMsg" },
      { "data": "PaymentDate" },
      { "data": "PaymentType" },
      { "data": "TradeAmt" },
      { "data": "vAccount" },
      { "data": "RecipeOrderId" },
      { "data": "createdAt" },
      { "data": "updatedAt" },
			{ "data": null }
		]

		// server only
		var columnDefs = [
      {
        "targets": 'no-sort',
        "orderable": false,
      },
			{
        "searchable": false,
        "targets": 2
      },
			{
				"targets"  : 5,
				"orderable": false,
				"searchable": false,
				"render": function ( data, type, row ) {
					var colBody =
					'<div class="row-action-buttons hidden-xs hidden-sm">'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.show('+row.id+')">'+
							'<i class="fa-fw fa fa-eye text-muted" />'+
						'</a>'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.edit('+row.id+')">'+
							'<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
						'</a>'+
					'</div>';
					return colBody;
				}
			},
		]
		var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;
		<%- include vue.ejs %>
		appMain.$mount("#main-index");
		appMain.loadItems(appMain.renderTable);
	};
</script>
