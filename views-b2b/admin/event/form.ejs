<fieldset>
  <div class="row">
    <section class="col col-lg-12 col-xs-12 col-xs-">
      <label class="label">問題</label>
      <label class="input state-disabled">
        <input type="text" name="title" placeholder="請輸入問題" v-model="data.item.title" disabled>
        <b class="tooltip tooltip-bottom-right">問題</b></label>
    </section>
  </div>
  <section>
    <label class="label">解答</label>
    <label class="input state-disabled">
      <textarea class="form-control" name="description" placeholder="請輸入解答詳細說明" v-model="data.item.description" rows="10" disabled></textarea>
      <b class="tooltip tooltip-bottom-right">解答</b></label>
  </section>

</fieldset>

<script>

$.validator.addMethod("LaterStartSell", function (value, element) {
  var sellStart = new Date($("input[name='sellStartDate']").val());
  var sellEnd = new Date($("input[name='sellEndDate']").val());
  return this.optional(element) || (sellStart < sellEnd);
});

$.validator.addMethod("LaterStartEvent", function (value, element) {
  var eventStart = new Date($("input[name='eventStartDate']").val());
  var eventEnd = new Date($("input[name='eventEndDate']").val());
  return this.optional(element) || (eventStart < eventEnd);
});

var formRules = {
  title : {
    required : true
  },
  price : {
    required : true
  },
  limit : {
    required : true
  },
  signupCount : {
    required : true
  },
  sellStartDate : {
    required : true,
  },
  sellEndDate : {
    required : true,
    LaterStartSell: true
  },
  eventStartDate : {
    required : true
  },
  eventEndDate : {
    required : true,
    LaterStartEvent: true
  }
}

// Messages for form validation
var formMessages = {
  title : {
    required : "請輸入問題"
  },
  price : {
    required : "請輸入價格"
  },
  limit : {
    required : "請輸入票券數量"
  },
  signupCount : {
    required : "請輸入已售出數量"
  },
  sellStartDate : {
    required : "請輸入開賣時間"
  },
  sellEndDate : {
    required : "請輸入結束販賣時間",
    LaterStartSell: "請輸入開賣時間之後的時間"
  },
  eventStartDate : {
    required : "請輸入活動開始時間"
  },
  eventEndDate : {
    required : "請輸入活動結束時間",
    LaterStartEvent: "請輸入活動開始之後的日期時間"
  },
}

</script>
