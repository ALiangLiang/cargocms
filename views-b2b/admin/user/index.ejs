<style type="text/css">

.table{
  table-layout:fixed;
  word-break:break-all;
}

</style>
<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
	<thead>
		<tr>
			<th width="5%" data-hide="phone">
        <i class="fa fa-fw text-muted fa-hashtag hidden-xs hidden-sm hidden-md"></i>
         ID
      </th>
      <th width="15%" data-class="expand">
				<i class="fa fa-fw fa-user text-muted hidden-sm hidden-xs"></i>
				使用者名稱
			</th>
			<th width="11%" class="no-sort">全名</th>
      <th width="15%" class="" name="email">
				<i class="fa fa-fw fa-envelope text-muted hidden-sm hidden-xs"></i>
				Email
			</th>
			<th width="8%" class="facebookId" data-hide="phone,tablet"> Facebook</th>
      <th width="8%" class="" data-hide="phone,tablet"> 生日</th>
      <th width="10%" class="" data-hide="phone,tablet"> 手機</th>
      <th class="" data-hide="always"> 市話</th>
      <th class="city" data-hide="always"> 縣市區域</th>
      <th class="" data-hide="always"> 收件地址1</th>
      <th class="" data-hide="always"> 收件地址2</th>
      <th width="10%" data-hide="phone,tablet">
				<i class="fa fa-fw fa-clock-o text-muted hidden-sm hidden-xs"></i>
				最近登入時間
			</th>
      <th class="roles" data-hide="always"> 角色</th>
			<th width="78px" data-hide="phone,tablet">操作</th>
		</tr>
	</thead>
	<!-- client only -->
	<tbody>
		<tr v-for="item in data.items">
			<td>{{ item.id }}</td>
			<td><a href="/admin/#/admin/{{modelName}}/show/{{item.id}}">{{ item.username }}</a></td>
			<td>{{ item.displayName }}</td>
      <td>{{ item.email }}</td>
      <td>{{ item.birthday }}</td>
      <td>{{ item.phone1 }}</td>
      <td>{{ item.phone2 }}</td>
      <td>{{ item.postCode + item.city + item.district }}</td>
			<td>{{ item.address }}</td>
      <td><small>{{ item.lastLogin }}</small></td>
			<td>{{ item.rolesArray }}</td>
			<td align="center" style="cursor: pointer;">
				<div class="row">
					<a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
						<i class="fa-fw fa fa-eye text-muted" />
					</a>
					<a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
						<i class="fa-fw fa fa-pencil-square-o text-muted"/>
					</a>
				</div>
			</td>
		</tr>
	</tbody>
</table>

<script type="text/javascript">
	var pagefunction = function() {

		// server only
		var columns = [
			{ "data": "id" },
			{ "data": "username" },
			{ "data": "displayName" },
      { "data": "email" },
			{ "data": "facebookId" },
      { "data": "birthday" },
      { "data": "phone1" },
      { "data": "phone2" },
      { "data": null },
      { "data": "address" },
			{ "data": "address2" },
      { "data": "lastLogin" },
			{ "data": null },
			{ "data": null }
		]

		// server only
		var columnDefs = [
      {
        "targets" : 'facebookId',
        "render": function(data, type, row) {
          if (!data) {
            return '<span class="text-muted"><small>沒有記錄</small></span>';
          }
          return '<a href="https://www.facebook.com/' + data + '">' + data + '</a>';
        }
      },
      {
        "targets": 'no-sort',
        "orderable": false,
      },
      {
        "targets" : "city",
        "render": function(data, type, row) {
          return '<td>'+ (row.postCode || '') + (row.city || '') + (row.district || '') +'</td>'
        },
      },
      {
        "targets" : 1,
        "render": function(data, type, row) {
          var html = '<img width="15" src="' + row.avatarThumb + '" class="img-circle" /> ';
					html += '<small>' + row.username + '</small>';
					return html;
        },
      },
			{
        "searchable": false,
        "targets": 2
      },
			{
				"targets" : 11,
				"render": function(data, type, row) {
					if (!data) {
						return '<span class="text-muted"><small>沒有記錄</small></span>';
					}
					return '<span class="txt-color-blueDark"><small>' + data + '</small></span>';
				}
			},
      {
        "targets" : 12,
        "render": function(data, type, row) {
          var roles = row.rolesArray;
          if (roles.indexOf('admin') !== -1) {
            return '<td>管理者</td>'
          } else if(roles.indexOf('supplier') !== -1) {
            return '<td>供應商( ' + row.Supplier.name + ' )</td>'
          } else {
            return '<td>使用者</td>'
          }
        }
      },
			{
				"targets"  : 13,
				"orderable": false,
				"searchable": false,
				"render": function ( data, type, row ) {
					var colBody =
					'<div class="row-action-buttons hidden-xs hidden-sm">'+
						'<a name="showDataButton" class="btn btn-default btn-xs" role="button" data-id="'+row.id+'">'+
							'<i class="fa-fw fa fa-eye text-muted" />'+
						'</a>'+
						'<a name="editDataButton" class="btn btn-default btn-xs" role="button" data-id="'+row.id+'">'+
							'<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
						'</a>'+
					'</div>';
					return colBody;
				}
			},
		]


		var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;
		<%- include vue.ejs %>
		appMain.$mount("#main-index");
		appMain.loadItems(appMain.renderTable);
	};
</script>
