<nav class="navbar navbar-default b2b-navbar">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">雲端漁場</a>
    </div>


    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if (!req.session.authenticated) { %>
          <% var loginBackUrl = req.url;%>
          <% if(loginBackUrl === '/register' || loginBackUrl === '/') { %>
          <%   loginBackUrl = '' %>
          <% } else { %>
          <%   loginBackUrl = '?url=' + loginBackUrl %>
          <% } %>
          <li class="<%= (req.path=='/login')?'active':'' %>"><a id="login" class="login-btn">登入</a></li>
        <% } else { %>
          <% //req.session.passport.user.displayName %>
          <li><a href="#">線上購物</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">會員中心 <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">訂單紀錄</a></li>
              <li><a href="#">修改資料</a></li>
              <li role="separator" class="divider"></li>
              <li><a id="logout-link" class="logout-link" href="javascript: void(0)" >登出</a></li>
            </ul>
          </li>
          <li class="dropdown" id="cart">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-shopping-cart" aria-hidden="true"></i> <span v-text="carts.length" v-show="carts.length > 0" class="badge"></span><span class="caret"></span></a>
            <ul class="dropdown-menu b2b-cart">
              <li v-for="cart in carts"><a href="#">{{cart.name}} * {{cart.number}}<i v-on:click="removeProduct(cart.id, $event)" class="fa fa-times" aria-hidden="true"></i></a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/order/form" class="btn btn-sm">結帳</a></li>
            </ul>
          </li>
        <% } %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% LayoutUtils.addScriptBlock(`
  $('.logout-link').click(function(){
    swal({
      title: '確認',
      text: '您確定要登出了嗎？',
      type: 'warning',
      showCancelButton: true,
      confirmButtonColor: "#e6caa8",
      confirmButtonText: "登出",
      cancelButtonText: "取消",
      closeOnConfirm: true,
      closeOnCancel: true,
    },function(isConform){
      if(isConform){
        open('/logout', '_self');
      }else{
        swal.close();
      }
    });
  });
`); %>
<% LayoutUtils.addScripts('/assets/b2b/plugins/bootstrap-number-input.js', '/assets/b2b/js/cart.js'); %>
