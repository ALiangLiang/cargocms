<!-- CSS Page Style -->
<link rel="stylesheet" href="/assets/unify/css/pages/page_log_reg_v1.css">

<style type="text/css">
.login-block .social-login {
    margin-bottom: 70px;
    border-bottom: 1px solid #eee;
    position: relative;
}
.login-block .or {
    position: relative;
    border: 1px solid #eee;
    width: 70px;
    height: 70px;
    top: 35px;
    left: 50%;
    margin-left: -35px;
    text-transform: uppercase;
    color: #333;
    background: #fff;
    line-height: 70px;
    padding: 0 24px;
    z-index: 1;
}
.rounded-x {
    border-radius: 50% !important;
}
.input-group label.error {
  position: absolute;
  bottom: -2em;
  width: 100%;
  left: 0;
  color: red;
}
.help-block {
  color: #a94442;
  font-weight: bolder;
}
</style>

<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="login-block col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <form class="reg-page" id="form" method="post" action="/api/user/forgotPassword">

        <div class="reg-header">
          <h2>聯絡我們</h2>
        </div>

        <div class="input-group margin-top-20">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <input type="text" placeholder="請輸入姓名" value="" id="name" name="name" class="form-control">
        </div>

        <div class="input-group margin-top-20">
          <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
          <input type="text" placeholder="請輸入 Email" value="" id="email" name="email" class="form-control">
        </div>

        <div class="input-group margin-top-20">
          <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
          <input type="number" placeholder="請輸入電話" value="" id="phone" name="phone" class="form-control">
        </div>

        <div class="margin-top-20">
          <section>
            <label class="label">公開狀態</label>
            <label class="select">
              <select name="visibility" class="scents-categories">
                <option value="帳號無法登入">帳號無法登入</option>
                <option value="無法顯示書籍清單">無法顯示書籍清單</option>
                <option value="無法瀏覽電子書內容">無法瀏覽電子書內容</option>
                <option value="讀取速度緩慢">讀取速度緩慢</option>
                <option value="其他">其他</option>
              </select>
              <i></i>
          </section>
        </div>

        <div class="row margin-top-20 margin-bottom-25">
          <div class="col-md-6 checkbox">
          </div>
          <div class="col-md-6">
            <button id="submit-button" class="btn-u pull-right" type="submit">送出</button>
          </div>
        </div>

        <% var error = req.flash('error')[0]; %>
        <% if (error) { %>
          <div class="alert alert-warning" role="alert"><%= error %></div>
        <% } %>

      </form>
    </div>
  </div><!--/row-->
</div><!--/container-->

<% LayoutUtils.addScriptBlock(`
  $(document).ready(function(){
    $.fn.preventDoubleSubmission = function() {
      $(this).on("submit", function(event){
        var $form = $(this);
        if( $(this).valid() ) {
          if ($form.data("submitted") === true){
            event.preventDefault();
          } else {
            $form.data("submitted", true);
          }
        } else {
          event.preventDefault();
        }
      });
      return this;
    }
    $("#form").preventDoubleSubmission();
    $(".reg-page").validate({
      rules: {
        email: {
          required: true,
          email: true
        },
      },
      messages: {
        email: {
          required: "請輸入 Email",
          email: "請輸入 Email 格式",
        },
      },
      highlight: function(element) {
          $(element).closest('.form-group').addClass('has-error');
      },
      unhighlight: function(element) {
          $(element).closest('.form-group').removeClass('has-error');
      },
      errorElement: 'span',
      errorClass: 'help-block',
      errorPlacement: function(error, element) {
          if(element.parent('.input-group').length) {
              error.insertAfter(element.parent());
          } else {
              error.insertAfter(element);
          }
      }
    });
  });
`); %>
<!--=== End Content Part ===-->
