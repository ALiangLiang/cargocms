
<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
  <thead>
    <tr>
      <th data-hide=""
      data-class="expand" class="no-sort">
        名稱
      </th>
      <th data-hide=""
      data-class="" class="no-sort">
        描述
      </th>
      <th data-hide=""
      data-class="" class="no-sort">
        Meta標題
      </th>
      <th data-hide=""
      data-class="" class="no-sort">
        Meta描述
      </th>
      <th data-hide=""
      data-class="" class="no-sort">
        Meta關鍵字
      </th>
      <th data-hide="always"
      data-class="" class="no-sort">
        TOP
      </th>
      <th data-hide="always"
      data-class="" class="no-sort">
        欄位
      </th>
      <th data-hide="always"
      data-class="" class="no-sort">
        排序
      </th>
      <th data-hide=""
      data-class="" class="no-sort">
        狀態
      </th>
      <th width="80" data-hide="phone,tablet"></th>
    </tr>
  </thead>
  <!-- client only -->
  <tbody>
    <tr v-for="item in data.items">
      <td>{{ item.OrderDescription.name}}</td>
      <td>{{ item.OrderDescription.description}}</td>
      <td>{{ item.OrderDescription.metaTitle}}</td>
      <td>{{ item.OrderDescription.metaDescription}}</td>
      <td>{{ item.OrderDescription.metaKeyword}}</td>

      <td>{{ item.top}}</td>

      <td>{{ item.column}}</td>

      <td>{{ item.sortOrder}}</td>

      <td>{{ item.status}}</td>

      <td align="center" style="cursor: pointer;">
        <div class="row">
          <a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
            <i class="fa-fw fa fa-eye text-muted" />
          </a>
          <a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
            <i class="fa-fw fa fa-pencil-square-o text-muted"/>
          </a>
        </div>
      </td>
    </tr>
  </tbody>
 </table>


