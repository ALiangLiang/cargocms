<% LayoutUtils.addStylesheets('/assets/admin/css/smartadmin-default-index.css'); %>

<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
	<thead>
		<tr>
			<th data-hide="phone"><i class="fa fa-fw text-muted fa-hashtag hidden-sm hidden-xs"/> ID</th>
			<th data-class="expand"><i class="fa fa-fw text-muted hidden-sm hidden-xs"/> 交易編號 </th>
      <th data-hide="always">廠商交易編號</th>
      <th data-hide="always">交易訊息</th>
      <th>付款時間</th>
      <th data-hide="phone,tablet">付款方式</th>
      <th data-hide="">發票號碼</th>
      <th>付款金額</th>
      <th data-hide="always">付款帳號</th>
      <th data-hide="always">訂購物品</th>
      <th>訂購人</th>
      <th>配方編號</th>
      <th>訂單狀態</th>
      <th class="no-sort" data-hide="always" style="">香味分子</th>
      <th data-hide="always">Email</th>
      <th data-hide="always">電話</th>
      <th data-hide="always">住址</th>
      <th data-hide="always">訂單建立時間</th>
      <th data-hide="phone,tablet"></th>

		</tr>
	</thead>
	<!-- client only -->
	<tbody>
		<tr v-for="item in data.items">
      <td>{{ item.id }}</td>
			<td><a href="/admin/#/admin/{{modelName}}/show/{{item.id}}">{{ item.TradeNo ? item.TradeNo:"訂單尚未成立" }}</a></td>
      <td>{{ item.MerchantTradeNo }}</td>
			<td>{{ item.RtnMsg }}</td>
      <td>{{ (item.PaymentDate == "Invalid date") ? "":item.PaymentDate }}</td>
      <td>{{ item.PaymentTypeDesc }} </td>
      <td>{{ item.invoiceNo }} </td>
      <td>{{ item.TradeAmt }} </td>
      <td>{{ item.vAccount }} </td>
      <td>{{ item.ItemNameArray }} </td>
      <td>{{ item.UserName}} </td>
      <td>{{ item.RecipeOrder.Recipe.id}}<a href="/admin/#/admin/labfnp/recipe/show/{{item.RecipeOrder.Recipe.id}}"> <i class="fa fa-fw fa-external-link"></i> </a></td>
      <td>{{ item.RecipeOrder.Recipe.productionStatusDesc}}</td>
      <template v-for="n in 6">
        <td>{{ item.RecipeOrder.Recipe.formula[n].scent + ' , ' + item.RecipeOrder.Recipe.formula[n].drops + ' 滴'}}</td>
      </template>
      <td>{{ item.Email }} </td>
      <td>{{ item.Phone}} </td>
      <td>{{ item.Address }} </td>
			<td align="center" style="cursor: pointer;">
				<div class="row">
					<a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
						<i class="fa-fw fa fa-eye text-muted" />
					</a>
					<a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
						<i class="fa-fw fa fa-pencil-square-o text-muted"/>
					</a>
				</div>
			</td>
			<td>{{ item.createdAt }} </td>
		</tr>
	</tbody>
 </table>


<script type="text/javascript">
	var pagefunction = function() {

		// server only
		var columns = [
			{ "data": "id" },  // 0
			{ "data": "TradeNo" },
			{ "data": "MerchantTradeNo" },
      { "data": "RtnMsg" },
      { "data": "PaymentDate" },
      { "data": "PaymentTypeDesc" },
      { "data": "invoiceNo"},
      { "data": "TradeAmt" },
      { "data": "vAccount" },
      { "data": "ItemNameArray" },
      { "data": "UserName" },
      { "data": null },
      { "data": "RecipeOrder.Recipe.productionStatusDesc" }, //12
      { "data": null },
      { "data": "Email" },
      { "data": "Phone" },
      { "data": "Address" },
      { "data": "createdAt" },
			{ "data": null },

		]

		// server only
		var columnDefs = [
      {
        "targets": 'no-sort',
        "orderable": false,
      },
			{
        "searchable": false,
        "targets": 2
      },
      {
        "searchable": false,
        "targets": 5
      },
      {
        "searchable": false,
        "targets": 6
      },
      {
        "searchable": false,
        "targets": 9
      },
      {
        "searchable": false,
        "targets": 10
      },
      {
        "searchable": false,
        "targets": 11,
        "render": function (data, type, row) {
          return '<td>' + data.RecipeOrder.Recipe.id + '<a href="/admin/#/admin/labfnp/recipe/show/' + data.RecipeOrder.Recipe.id + '"> <i class="fa fa-fw fa-external-link"></i> </a>' + '</td>';
        }
      },
      {
        "searchable": false,
        "targets": 12
      },
      {
        "searchable": false,
        "targets": 13,
        "render": function (data, type, row) {
          var colBody = '';
          for(var i = 0 , len = data.RecipeOrder.Recipe.formula.length; i < len - 1; i++){
            colBody = colBody + data.RecipeOrder.Recipe.formula[i].scent + ' (' + data.RecipeOrder.Recipe.formula[i].drops + ')';
            colBody += ' , ';
          }
          colBody = colBody + data.RecipeOrder.Recipe.formula[i].scent + ' (' + data.RecipeOrder.Recipe.formula[i].drops + ')';
          return '<td>' + colBody + '</td>';
        }
      },
      {
        "searchable": false,
        "targets": 14
      },
      {
        "searchable": false,
        "targets": 15
      },
      {
        "searchable": false,
        "targets": 16
      },
			{
				"targets"  : 18,
				"orderable": false,
				"searchable": false,
				"render": function ( data, type, row ) {
					var colBody =
					'<div class="row-action-buttons hidden-xs hidden-sm">'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.show('+row.id+')">'+
							'<i class="fa-fw fa fa-eye text-muted" />'+
						'</a>'+
						'<a class="btn btn-default btn-xs" role="button" onclick="window.appMain.edit('+row.id+')">'+
							'<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
						'</a>'+
					'</div>';
					return colBody;
				}
			},
		]
		var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;
		<%- include vue.ejs %>
		appMain.$mount("#main-index");
		appMain.loadItems(appMain.renderTable);
	};
</script>
