<div class="news-v3 bg-color-white margin-bottom-60">
  <% if (data.coverUrl) { %>
    <% if (data.coverType == 'img') { %>
      <img class="img-responsive full-width" src="<%= data.coverUrl %>" alt="">
    <% } else{ %>
      <div class="responsive-video">
        <iframe src="<%= data.coverUrl %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
      </div>
    <% } %>
  <% } %>
  <div class="news-v3-in">
    <ul class="list-inline posted-info">
      <% if (data.UserId) { %>
        <li>By <a href="#"><%= data.User.displayName %></a></li>
      <% } %>
      <li><%= data.createdAt %></li>
    </ul>

    <div class="blog-title">
      <h2><%= data.title %></h2>
    </div>

    <div class="blog-content">
      <%- data.content %>
    </div>

