appMain.DataTableInitComplete = function() {
  var api = this.api();
  this.yadcf([
    {        
      column_number: 3,
      filter_type: "range_date",
      filter_container_id: "external_filter_container",
      date_format: 'yy/mm/dd',
    },
  ]);
  var slesct = '<span>訂單狀態：</span>'+
  '<select class="form-control input-sm" id="productionStatus" style="margin-right: 5px;">'+
    '<option value=""></option>' +
    '<option value="NEW">NEW</option>' +
    '<option value="SUBMITTED">下訂單</option>' +
    '<option value="PAID">已付款</option>' +
    '<option value="PROCESSING">製作中</option>' +
    '<option value="CANCELLED">取消</option>' +
    '<option value="SHIPPED">已寄出</option>' +
    '<option value="DELIVERED">已交付</option>' +
    '<option value="COMPLETED">完成</option>' +
  '</select>';
  $(slesct).prependTo('.DTTT_container');
  $('#productionStatus').on('change', function(){
    api.columns().search().draw();
  })
  $("[name='updateProductionStatus']").focus(function() {
    $(this).attr('data-oldValue', $(this).val());
  });

  $("[name='updateProductionStatus']").on('change', function() {
    var that = this;
    var id = $(this).data("id")
    var selectedDesc = $(this).find('option:selected').text();
    var oldVal = $(this).attr('data-oldValue');
    var newVal = $(this).val();

    console.log(id, $(this).val(), selectedDesc, oldVal, newVal);

    var msgInfo = {
      title: '注意',
      content: '確認更新訂單 ID: '+ id +' 訂單狀態為: '+ selectedDesc,
      btnArray: ['確認', '取消'],
    };
    var action = function(ButtonPressed) {
      if (ButtonPressed === '確認') {
        $(that).val(newVal);
        $.ajax({
          url: "/api/admin/labfnp/recipeorder/status/"+id,
          method: "put",
          dataType: 'json',
          cache: false,
          data:{
            productionStatus: newVal
          }
        }).done(function (result) {
          messageApp.show({
            desc: result.message,
            type: 'success'
          });
        });
      } else {
        $(that).val(oldVal);
      }
    };
    messageApp.confirm(msgInfo, action);
  });
}
appMain.customSearch = function() {
  var searchProductionStatus = $('#productionStatus').val() || "";
  if (searchProductionStatus !== '') {
    appModel.pagingQuery.columns.push({
      data: '',
      searchable: true,
      findInclude: true,
      search: {
        model: 'RecipeOrder',
        where: {
          productionStatus: $('#productionStatus').val(),
        }
      }
    })
  }
}
